{
  "compilerOptions": {
    "outDir": "dist",
    "module": "esnext",
    "target": "esnext",
    "declaration": true,
    "jsx": "react",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/packages/*"],
      "@utils/*": ["src/utils/*"],
      "@hooks/*": ["src/hooks/*"],
    },
  },
  "include": [
    "src"
  ],
  "exclude": [
    "src/main.tsx",
    "src/types.ts",
    "src/packages/*/__example__/*"
  ]
}