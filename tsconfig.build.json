{
  "compilerOptions": {
    "outDir": "dist",
    "module": "esnext",
    "target": "esnext",
    "declaration": true,
    "jsx": "react",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
  },
  "include": [
    "src"
  ],
  "exclude": [
    "src/**/*.test.tsx",
    // "src/**/*.stories.tsx",
    "src/*.md",
    "src/setUpTests.tsx",
    "src/main.tsx",
    "src/types.ts",
    "src/packages/*/__example__/*"
  ]
}