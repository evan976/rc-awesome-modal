{
  "compilerOptions": {
    "outDir": "dist",
    "module": "esnext",
    "target": "esnext",
    "declaration": true,
    "jsx": "react",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "baseUrl": "."
  },
  "include": [
    "index.ts",
    "packages/*/*.tsx",
    "packages/*/*.ts"
  ],
  "exclude": [
    "main.tsx",
    "packages/components/__example__/*",
    "node_modules/*"
  ]
}