{
  "compilerOptions": {
    "rootDir": ".",
    "declaration": false,
    "noEmit": true,
    "emitDeclarationOnly": false,
    "outDir": "dist",
    "target": "esnext",
    "module": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "sourceMap": true,
    "jsx": "react",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "removeComments": false,
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/packages/*"],
      "@utils/*": ["src/utils/*"],
      "@hooks/*": ["src/hooks/*"],
    },
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "packages/**/__example__"
  ]
}
