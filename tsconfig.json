{
  "compilerOptions": {
    "rootDir": ".",
    "declaration": false,
    "noEmit": true,
    "emitDeclarationOnly": false,
    "outDir": "dist",
    "target": "esnext",
    "module": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "sourceMap": true,
    "jsx": "react",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "removeComments": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/packages/*"],
      "@utils/*": ["src/utils/*"],
      "@hooks/*": ["src/hooks/*"],
    },
  },
  "include": ["src/**/*"],
  "exclude": [
    "packages/components/__example__/*",
    "node_modules/*"
  ]
}
