{
  "compilerOptions": {
    "rootDir": ".",
    "declaration": false,
    "noEmit": true,
    "emitDeclarationOnly": false,
    "outDir": "dist",
    "target": "esnext",
    "module": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "sourceMap": true,
    "jsx": "react",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "removeComments": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@components/*": ["packages/components/*"],
      "@utils/*": ["packages/utils/*"],
      "@hooks/*": ["packages/hooks/*"],
    },
  },
  "include": [
    "index.ts",
    "main.tsx",
    "packages/**/*",
  ],
  "exclude": [
    "packages/components/__example__/*",
    "node_modules/*"
  ]
}
