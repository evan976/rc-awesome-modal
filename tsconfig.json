{
  "compilerOptions": {
    "rootDir": ".",
    "declaration": false,
    "noEmit": true,
    "emitDeclarationOnly": false,
    "outDir": "dist",
    "target": "esnext",
    "module": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "sourceMap": true,
    "jsx": "react",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "removeComments": true,
    "strict": true,
    "baseUrl": "."
  },
  "include": [
    "index.ts",
    "main.tsx",
    "packages/*/*.tsx",
    "packages/*/*.ts"
  ],
  "exclude": [
    "packages/components/__example__/*",
    "node_modules/*"
  ]
}
